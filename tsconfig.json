{
    "extends": "@tsconfig/node10/tsconfig.json",
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./lib",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/",
        "src/zigbee2mqtt"
    ],
    "exclude": [
        "**/*.test.js",
        "node_modules"
    ]
}