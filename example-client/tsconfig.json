{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "esnext",
    "module": "CommonJS",
    "esModuleInterop": true,            
    "forceConsistentCasingInFileNames": true,
    "strict": true,     
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "sourceMap": true
  },
  "exclude": [
      "node_modules"
  ],
  "include": [
    "index.ts",
  ],
}
